{
  "name": "@cakeaway/root",
  "private": true,
  "version": "0.0.1",
  "description": "Cakeaway - 케이크 공장 시뮬레이션 게임",
  "keywords": [
    "game",
    "simulation",
    "typescript",
    "phaser",
    "react"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @cakeaway/app dev",
    "build": "pnpm --filter @cakeaway/simulation-engine build && pnpm --filter @cakeaway/app build",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive clean",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0"
}
